@{
    ViewBag.Title = "Додати користувача";
}

<h2>Додати користувача</h2>

<form method="post" action="">
    <input type="hidden" value="@ViewBag.UserId" name="id" />
    <div class="form-group">
        <label for="name">Ім'я</label>
        <input type="text" class="form-control" name="Name" id="Name" placeholder="Введіть ім'я ">
    </div>
    <div class="form-group">
        <label for="budget">Вік</label>
        <input type="number" class="form-control" name="UserAge" id="UserAge" placeholder="Введіть кількість років">
    </div>
    <button type="submit" class="btn btn-primary">Додати</button>
</form>